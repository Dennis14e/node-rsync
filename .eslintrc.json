{
    "env": {
        "jest/globals": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:jest/all"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "indent": [ "error", 4 ],
        "max-len": [ "error", { "code": 120 } ],
        "require-jsdoc": "error",
        "jest/no-hooks": "off"
    },
    "plugins": [
        "jest"
    ]
}
