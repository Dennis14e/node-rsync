{
    "env": {
        "jest/globals": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:jest/all"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "indent": [ "error", 4, { "SwitchCase": 1 } ],
        "max-len": [ "error", { "code": 120 } ],
        "semi": [ "error", "always" ],
        "space-before-function-paren": "error",
        "array-bracket-spacing": [ "error", "always" ],
        "object-curly-spacing": [ "error", "always" ],
        "keyword-spacing": "error",
        "spaced-comment": "error",
        "require-jsdoc": "error",
        "jest/no-hooks": "off"
    },
    "plugins": [
        "jest"
    ]
}
